extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3.teal
                h3 Regista tarefa
            .w3-container
                form.w3-container(action="/processaForm" method="POST")
                    lable.w3-teal
                        b Data
                    input.w3-input.w3-boarder.w3-light-grey(type='text', name="registo")
                    lable.w3-teal
                        b Prazo
                    input.w3-input.w3-boarder.w3-light-grey(type='text', name="prazo")
                    lable.w3-teal
                        b Descrição
                    input.w3-input.w3-boarder.w3-light-grey(type='text', name="descricao")
                    lable.w3-teal
                        b Tipo
                    select(name="tipo")
                        option(value="Desporto") Desporto
                        option(value="Politica") Politica
                    input(type="hidden", name="estado", value="1")
                    br
                    br
                    input.w3-btn.w3-blue-grey(type="submit", value="Enviar")
            footer.w3-container.w3.teal
                address Gerado por FormApp

